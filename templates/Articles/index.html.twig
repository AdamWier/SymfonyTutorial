{% extends 'base.html.twig' %}

{% block title %} Symfart Articles {% endblock %}

{% block body %}
    {% if articles %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Article Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{article.title}}</td>
                    <td><a class="btn btn-dark" href="./article/{{article.id}}">Show</a>
                </tr>
            {% endfor %}
    {% else %}
    <p>No articles to display</p>
    {% endif %}
{% endblock %}